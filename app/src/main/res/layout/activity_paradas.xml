                tools:layout_editor_absoluteY="507dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/oColono"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
